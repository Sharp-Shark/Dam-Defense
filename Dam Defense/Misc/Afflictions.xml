  </Affliction>

  <!-- cooldown for afterburn -->
  <Affliction name="Afterburn Stun Cooldown" identifier="afterburnstuncooldown" description="" type="burn" causeofdeathdescription="" selfcauseofdeathdescription="" limbspecific="false" activationthreshold="1.0" showiconthreshold="999" maxstrength="1">
