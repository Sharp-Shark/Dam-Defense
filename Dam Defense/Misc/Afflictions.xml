  <!-- affliction given by spitroach spit -->
  <Affliction name="Spitroach Acid" identifier="spitroachacid" description="" type="burn" causeofdeathdescription="" selfcauseofdeathdescription="" limbspecific="true" activationthreshold="1.0" showiconthreshold="999" maxstrength="100">
    <Effect minstrength="1" maxstrength="60" minvitalitydecrease="0" maxvitalitydecrease="0" strengthchange="-2">
      <StatusEffect target="Limb">
	    <Conditional speciesname="neq spitroach" />
        <Affliction identifier="acidburn" amount="1.5" />
